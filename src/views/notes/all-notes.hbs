<div class="row">
  {{#each notes}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ title }}
        </h4>
        <p><b>Descripci√≥n:</b> {{ description }} </p>
        <p><b>Fecha:</b> {{ date }} </p>
        <p><b>Hora:</b> {{ schedule }} </p>
        <p><b>Expositores:</b></p>
        <ul class="list-group mb-3">
          {{#each exhibitors}}
            <li class="list-group-item">{{this.name}}: {{this.dni}}</li>
          {{/each}}
        </ul> 
        <p><b>Link:</b> {{ link }} </p>
        <!-- DELETE REQUEST -->
        <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hello {{user.name}}</h1>
      <p clsss="lead">There are not Notes yet.</p>
      <a href="/notes/add" class="btn btn-success btn-block">Create One!</a>
    </div>
  </div>
  {{/each}}
</div>